{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Compilar C com cs50",
            "command": "gcc",
            "args": [
                "-o",
                "output/${fileBasenameNoExtension}",
                "${file}",
                "-lcs50"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": ["$gcc"],
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            }
        }
    ]
}